<%-include ('../../../views/partials/admin/header')%>

<main class="main-content">
    <h2>Add Category</h2>
    <form action="/admin/add-category" method="POST">
        <% if (errors) { %>
            <div class="errors">
                <% errors.forEach(error => { %>
                    <p><%= error.msg %></p>
                <% }) %>
            </div>
        <% } %>
        
        <div class="form-group">
            <label for="name">Category Name:</label>
            <input type="text" id="name" name="categoryName" value="<%= formData.name || '' %>" required placeholder="Enter category name">
        </div>
        
        <div class="form-group">
            <label for="description">Description (Optional):</label>
            <textarea id="description" name="description" placeholder="Enter a brief description about this category"><%= formData.description || '' %></textarea>
        </div>
        
        <div class="form-actions">
            <button type="submit" class="btn btn-dark">Add Category</button>
            <a href="/admin/category" class="btn btn-outline-dark">Cancel</a>
        </div>
    </form>
