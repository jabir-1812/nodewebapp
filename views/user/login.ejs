<link rel="stylesheet" href="/user/login.css">

<form action="/login" method="post" class="auth-form">
    <div class="auth-header">
        <h1>Welcome Back</h1>
        <p>Please enter your credentials to login</p>
    </div>

    <% if (message && message.length> 0) { %>
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <%= message %>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
        <% } %>

            <div class="form-group">
                <label for="email">Email Address</label>
                <input name="email" id="email" type="email" class="form-control" placeholder="Enter email" required>
            </div>

            <div class="form-group">
                <label for="password">Password</label>
                <input name="password" id="password" type="password" class="form-control" placeholder="Enter password"
                    required>
                <div class="form-footer">
                    <a href="/forgot-password" class="forgot-password">Forgot Password?</a>
                </div>
            </div>

            <% if (passwordMsg && passwordMsg.length> 0) { %>
                <div class="alert alert-danger text-center fade show" role="alert">
                    <%= passwordMsg %>
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
                <% } %>

                    <button type="submit" class="btn btn-primary btn-block">Login</button>

                    <div class="divider">
                        <span>or continue with</span>
                    </div>

                    <a href="/auth/google" style="text-decoration: none;">
                        <button type="button" class="btn btn-google btn-block">
                        <svg class="google-icon" viewBox="0 0 24 24" width="18" height="18">
                            <path fill="#4285F4"
                                d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z">
                            </path>
                            <path fill="#34A853"
                                d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z">
                            </path>
                            <path fill="#FBBC05"
                                d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z">
                            </path>
                            <path fill="#EA4335"
                                d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z">
                            </path>
                        </svg>
                        Continue with Google
                    </button>
                    </a>

                    <div class="auth-footer">
                        Don't have an account? <a href="/signup" class="auth-link">Sign up</a>
                    </div>
</form>

<%-include ('../../views/partials/user/footer')%>



