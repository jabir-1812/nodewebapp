</style>
  <div class="password-container">
  <h1>Change Password</h1>
  <form id="passwordForm" class="password-form">
    <div class="form-group">
      <label for="password">Enter Current Password</label>
      <input name="password" id="password" type="password" placeholder="Enter your current password">
      <small id="error-message"></small>
    </div>
    <button type="submit" class="btn-submit">Submit</button>
  </form>

  <div class="links">
    <a href="/forgot-password">Forgot password?</a>
    <a href="/forgot-password">Reset Your Password via Email OTP</a>
  </div>
</div>


<script>
    document.getElementById('passwordForm').addEventListener('submit',async (e)=>{
        e.preventDefault();

        const errorMsgElement=document.getElementById('error-message')
        errorMsgElement.innerHTML="";
        const password=document.getElementById('password').value;
        if(password.trim()===""){
            errorMsgElement.innerHTML="This field is required"
            return;
        }

        const response=await fetch('/verify-current-password',{
            method:"POST",
            headers:{
                'Content-Type':"application/json"
            },
            body:JSON.stringify({password:password})
        })

        const result=await response.json()
        if(response.ok){
            Swal.fire({
                title:"Done",
                icon:"success",
                timer:1000,
                showConfirmButton:true
            }).then(()=>{
                window.location.href='/reset-password'
            })
        }else{
            Swal.fire("Failed",result.message,"error")
        }
    })
</script>
