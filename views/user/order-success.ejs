<%- include("../../views/partials/user/header") %>

<style>
  .thank-you {
    max-width: 600px;
    margin: 80px auto;
    padding: 40px;
    text-align: center;
    background: #fff;
    border-radius: 20px;
    box-shadow: 0 8px 25px rgba(0,0,0,0.08);
    font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
  }

  .thank-you h2 {
    font-size: 2rem;
    color: #2d3748;
    margin-bottom: 15px;
  }

  .thank-you p {
    font-size: 1.1rem;
    margin-bottom: 30px;
    color: #4a5568;
  }

  .thank-you strong {
    color: #2b6cb0;
  }

  .actions {
    display: flex;
    justify-content: center;
    gap: 15px;
    flex-wrap: wrap;
  }

  .btn {
    display: inline-block;
    padding: 12px 25px;
    border-radius: 30px;
    font-size: 1rem;
    font-weight: 600;
    text-decoration: none;
    transition: all 0.2s ease-in-out;
  }

  .btn-primary {
    background: #3182ce;
    color: #fff;
  }

  .btn-primary:hover {
    background: #2b6cb0;
  }

  .btn-secondary {
    background: #e2e8f0;
    color: #2d3748;
  }

  .btn-secondary:hover {
    background: #cbd5e0;
  }
</style>

<div class="thank-you">
  <h2>ðŸŽ‰ Thank you for your order!</h2>
  <p>Your order ID: <strong><%= order.orderId %></strong></p>

  <div class="actions">
    <a href="/user-profile/orders/order-details/<%= order.orderId %>" class="btn btn-primary">View Order Details</a>
    <a href="/shop" class="btn btn-secondary">Continue Shopping</a>
  </div>
</div>

<%- include("../../views/partials/user/footer") %>
